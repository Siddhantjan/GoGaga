<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect01"
        android:padding="10dp">
        <TextView
            android:id="@+id/editProfileTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="Edit Profile"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="10dp"
            android:id="@+id/e_profileIv"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_person_grey"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp" />

        <EditText
            android:padding="10dp"
            android:id="@+id/nameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rect02"
            android:drawableStart="@drawable/ic_person_grey"
            android:drawablePadding="5dp"
            android:hint="Full Name"
            android:inputType="textPersonName|textCapWords"
            android:textColorHint="@color/colorGrey01"
            android:textColor="@color/colorBlack"/>
        <EditText
            android:padding="10dp"
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rect02"
            android:drawableStart="@drawable/ic_email_grey"
            android:drawablePadding="5dp"
            android:hint="enter your mail"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorGrey01"
            android:textColor="@color/colorBlack"/>
        <EditText
            android:padding="10dp"
            android:id="@+id/professionEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rect02"
            android:drawableStart="@drawable/ic_person_grey"
            android:drawablePadding="5dp"
            android:hint="Enter your Profession"
            android:textColorHint="@color/colorGrey01"
            android:textColor="@color/colorBlack"/>
        <Button
            android:layout_marginTop="12dp"
            android:id="@+id/updateBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:text="Update Info"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>